{
    "name": "SS Extension",
    "version": "1.0",
    "description": "Take screenshot of your web page",
    "manifest_version": 2,
    "background": {
        "scripts": ["script/background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_icon": "images/screenshot32.png",
        "default_title": "Take a screen shot!"
    },
    "icons": {
        "16": "images/screenshot16.png",
        "32": "images/screenshot32.png",
        "64": "images/screenshot64.png",
        "128": "images/screenshot128.png"
    },
    "permissions": [
        "activeTab"
    ]
}